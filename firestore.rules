rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if the user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if the user is an admin
    // This assumes you will add a custom claim 'admin: true' to admin users
    // Or store admin roles in a separate collection (more secure for production)
    function isAdmin() {
      return isAuthenticated() && request.auth.token.admin == true;
    }

    // Products collection rules
    match /products/{productId} {
      // Allow anyone to read products (for the public store)
      allow read: if true;

      // Allow only admins to create, update, and delete products
      allow create, update, delete: if isAdmin();
    }

    // Categories collection rules
    match /categories/{categoryId} {
      // Allow anyone to read categories (for the public store)
      allow read: if true;
      // Allow only admins to create, update, and delete categories
      allow create, update, delete: if isAdmin();
    }

    // Example for a 'users' collection (if you store user profiles)
    match /users/{userId} {
      // A user can only read/write their own profile
      allow read, update: if isAuthenticated() && request.auth.uid == userId;
      // Admins can read all user profiles
      allow read: if isAdmin();
      // No one can delete user profiles directly from client (only via Cloud Function if needed)
      allow delete: if false;
    }

    // Orders collection rules
    match /orders/{orderId} {
      // Allow anyone to read orders for testing purposes.
      allow read: if true;

      // Users can create new orders (if authenticated)
      allow create: if isAuthenticated();
      // Admins can read, update, and delete all orders
      allow read, update, delete: if isAdmin();
    }

    // Content collection rules (UPDATED to allow public read)
    match /content/{documentId} {
      // Allow anyone to read content documents (for public pages like About Us)
      allow read: if true;
      // Allow only admins to write (create/update/delete) content documents
      allow write: if isAdmin(); // تم التعديل هنا للسماح بالوصول العام للقراءة
    }

    // Deny all other collections by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
